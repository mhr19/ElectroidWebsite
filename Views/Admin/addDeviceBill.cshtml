</head>
<body>
    <!-- start: Header -->
 
    <!-- start: Content -->
    <div id="content" class="span10">


        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="#">Home</a>
                <i class="icon-angle-right"></i>
            </li>
            <li><a href="#">Device Bill</a></li>
        </ul>

        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon edit"></i><span class="break"></span>Add Device Bill Details</h2>
                    @*<div class="box-icon">
                        <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                        <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                        <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
                    </div>*@
                </div>
                <div class="box-content">
                    <form class="form-horizontal" action="~/Admin/saveDeviceBill" method="post">
                        <fieldset>


                            <div class="control-group">
                                <label class="control-label" for="selectError">Device Id:</label>
                                <div class="controls">
                                    <select class="form-control" name="DeviceId" id="selectError" data-rel="chosen">

                                       @foreach (var i in Model)
                                       {

                                        <option value="@i.Id">@i.Name</option>
                                       }

                                    </select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="selectError">BillId:</label>
                                <div class="controls">
                                    <select class="form-control" name="TaxationDetailId" data-rel="chosen">

                                        @try
                                        {
                                            foreach (var i in ViewBag.taxList)
                                            {

                                                <option value="@i.Id">@i.Id</option>
                                            }
                                        }
                                        catch (Exception a)
                                        {

                                        }

                                    </select>
                                </div>
                            </div>
                            @*<div class="control-group">
                                <label class="control-label" for="selectError">Billing Month:</label>
                                <div class="controls">
                                    <select class="form-control" name="BillingMonth" data-rel="chosen">
                                        
                                        <option value="January">January</option>
                                        <option value="February">February</option>
                                        <option value="March">March</option>
                                        <option value="April">April</option>
                                        <option value="May">May</option>
                                        <option value="June">June</option>
                                        <option value="July">July</option>
                                        <option value="August">August</option>
                                        <option value="September">September</option>
                                        <option value="October">October</option>
                                        <option value="November">November</option>
                                        <option value="December">December</option>


                                    </select>
                                </div>
                            </div>*@
                            <div class="control-group">
                                <label class="control-label">Units Consumed:<span style="color:red;">*</span></label>
                                <div class="controls">
                                    <input type="number" style=" width:280px" name="UnitsConsumed" required>
                                </div>
                            </div>
                          
                            <div class="control-group">
                                <label class="control-label">Amount:<span style="color:red;">*</span></label>
                                <div class="controls">
                                    <input type="number" style=" width:280px" name="Amount" required>
                                </div>
                            </div>

                        

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">Save Device Bill</button>

                            </div>
                        </fieldset>
                    </form>
                </div>
            </div><!--/span-->
        </div><!--/row-->
        @*<footer>
            <p>
                <span style="text-align:left;float:left">&copy; 2013 <a href="http://jiji262.github.io/Bootstrap_Metro_Dashboard/" alt="Bootstrap_Metro_Dashboard">Bootstrap Metro Dashboard</a></span>

            </p>
        </footer>*@

