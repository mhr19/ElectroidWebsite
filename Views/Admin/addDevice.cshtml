    <!-- end: Favicon -->




</head>
<body>
    <!-- start: Header -->
 
    <!-- start: Content -->
    <div id="content" class="span10">


        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="#">Home</a>
                <i class="icon-angle-right"></i>
            </li>
            <li><a href="#">Device</a></li>
        </ul>

        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon edit"></i><span class="break"></span>Add Device Details</h2>
                    @*<div class="box-icon">
                        <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                        <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                        <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
                    </div>*@
                </div>
                <div class="box-content">
                    <form class="form-horizontal" action="~/Admin/saveDevice" method="post">
                        <fieldset>
                            

                          
                            @*<div class="control-group">
                                <label class="control-label" for="selectError">Room Id:</label>
                                <div class="controls">
                                    <select class="form-control" name="RoomId" data-rel="chosen">
                                        @try{
                                        foreach (var i in ViewBag.roomList)
                                        {
                        
                                        <option value="@i.Id">@i.RoomName</option>
                                        }
                                        }catch(Exception a)
                                        {

                                        }
                    
                                        

                                    </select>
                                </div>
                            </div>*@


                            <div class="control-group">
                                <label class="control-label">Room Id:</label>
                                <div class="controls">
                                    <input type="text" style=" width:280px" value="@ViewBag.roomId" name="RoomId" readonly>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="selectError">Appliance Id:</label>
                                <div class="controls">
                                    <select class="form-control" name="ApplianceId" id="selectError" data-rel="chosen">

                                        @foreach (var i in Model)
                                        {

                                            <option value="@i.Id">@i.Name</option>
                                        }

                                    </select>
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label">Name:<span style="color:red;">*</span></label>
                                <div class="controls">
                                    <input type="text" style=" width:280px" maxlength="50" name="Name" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Arduino Id:<span style="color:red;">*</span></label>
                                <div class="controls">
                                    @*<input type="number" style=" width:280px" name="DeviceArduinoId" required>*@
                                    <input name="ArduinoId" min="0"
                                           oninput="javascript: if (this.value.length > 3) this.value = this.value.slice(0, this.maxLength); "
                                           type="number"
                                           maxlength="3"
                                           style=" width:280px" required />
                                </div>
                            </div>
                          
                            <div class="control-group">
                                <label class="control-label">Status:<span style="color:red;">*</span></label>
                                <div class="controls">
                                    <input type="text" style=" width:280px" maxlength="10" name="Status" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Watt:<span style="color:red;">*</span></label>
                                <div class="controls">
                                    @*<input type="number" style=" width:280px" name="Voltage" required>*@
                                    <input name="Watt" min="0"
                                           oninput="javascript: if (this.value.length > 4) this.value = this.value.slice(0, this.maxLength); "
                                           type="number"
                                           maxlength="4"
                                           style=" width:280px" required />
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">Save Device</button>

                            </div>
                        </fieldset>
                    </form>
                </div>
            </div><!--/span-->
        </div><!--/row-->
        @*<footer>
            <p>
                <span style="text-align:left;float:left">&copy; 2013 <a href="http://jiji262.github.io/Bootstrap_Metro_Dashboard/" alt="Bootstrap_Metro_Dashboard">Bootstrap Metro Dashboard</a></span>

            </p>
        </footer>*@

