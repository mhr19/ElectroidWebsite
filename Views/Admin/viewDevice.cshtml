                    <div class="controls">
                        <input type="text" style=" width:280px; color:red" value="*No user info to show" name="Password" readonly>
                    </div>
                }

            </div>*@
        <div class="control-group">
            <label class="control-label">Device Name:</label>
            <div class="controls">
                <input type="text" style=" width:280px" value="@ViewBag.searchedDevice.Name" name="Name" readonly>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Appliance Name:</label>
            <div class="controls">
                <input type="text" style=" width:280px" value="@ViewBag.searchedAppliance.Name" name="Name" readonly>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Arduino Id:</label>
            <div class="controls">
                <input type="text" style=" width:280px" value="@ViewBag.searchedDevice.DeviceArduinoId" name="Name" readonly>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Voltage:</label>
            <div class="controls">
                <input type="text" style=" width:280px" value="@ViewBag.searchedDevice.Voltage" name="Name" readonly>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Status:</label>
            <div class="controls">
                <input type="text" style=" width:280px" value="@ViewBag.searchedDevice.Status" name="Name" readonly>
            </div>
        </div>

        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon user"></i><span class="break"></span>Device Bill Info</h2>
                    <div class="box-icon">
                        <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                        <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                        <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Billing Month</th>
                                <th>Units Consumed</th>
                                <th>Taxation Detail Id</th>
                                

                            </tr>
                        </thead>
                        <tbody>
                            @try
                            {

                                foreach (var a in Model)
                                {
                                    <tr>

                                        <td>@a.Id</td>
                                        <td class="center">@a.BillingMonth</td>
                                        <td class="center">@a.UnitsConsumed</td>
                                        <td class="center">@a.TaxationDetailId</td>
                                       

                                        <td class="center">
                                            <a class="btn btn-success" href="#">
                                                <i class="halflings-icon white zoom-in"></i>
                                            </a>
                                            <a class="btn btn-info" href="#">
                                                <i class="halflings-icon white edit"></i>
                                            </a>
                                            <a class="btn btn-danger" href="#">
                                                <i class="halflings-icon white trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            catch (Exception x)
                            {

                            }


                        </tbody>
                    </table>
                </div>
            </div><!--/span-->

        </div><!--/row-->

       
        <footer>
            <p>
                <span style="text-align:left;float:left">&copy; 2013 <a href="http://jiji262.github.io/Bootstrap_Metro_Dashboard/" alt="Bootstrap_Metro_Dashboard">Bootstrap Metro Dashboard</a></span>

            </p>
        </footer>

        <!-- start: JavaScript-->

        <script src="~/Scripts/js4/jquery-1.9.1.min.js"></script>
