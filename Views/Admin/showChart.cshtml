            <div id="login">
                <h1>Add New House</h1>

                <form role="form" action="~/Admin/addHouse">
                    <div class="form-group ">
                        <div class="field-wrap">
                            <label>
                                House Id<span class="req">*</span>
                            </label>
                            <input type="number" name="Id" required autocomplete="off" />
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="field-wrap">
                            <label>
