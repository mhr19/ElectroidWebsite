</head>
<body>


    <!-- start: Content -->
    <div id="content" class="span10">


        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="#">Home</a>
                <i class="icon-angle-right"></i>
            </li>
            <li><a href="#">Taxation Detail</a></li>
        </ul>

        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon edit"></i><span class="break"></span>Edit Taxation Detail</h2>
                    @*<div class="box-icon">
                        <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                        <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                        <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
                    </div>*@
                </div>
                <div class="box-content">
                    <form class="form-horizontal" action="~/Admin/saveUpdatedTaxationDetail" method="post">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label">Id:</label>
                                <div class="controls">
                                    <input type="text" style=" width:280px" name="Id" value="@Model.Id" readonly>
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label" for="selectError">Billing Month:</label>
                                <div class="controls">
                                    <select class="form-control" name="BillingMonth" id="selectError" data-rel="chosen">

                                        <option value="January">January</option>
                                        <option value="February">February</option>
                                        <option value="March">March</option>
                                        <option value="April">April</option>
                                        <option value="May">May</option>
                                        <option value="June">June</option>
                                        <option value="July">July</option>
                                        <option value="August">August</option>
                                        <option value="September">September</option>
                                        <option value="October">October</option>
                                        <option value="November">November</option>
                                        <option value="December">December</option>


                                    </select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Taxation:</label>
                                <div class="controls">
                                    <input type="text" style=" width:280px" name="Taxation" value="@Model.Taxation" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Slab1:</label>
                                <div class="controls">
                                    <input type="text" style=" width:280px" name="Slab1" value="@Model.Slab1" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Slab1 Rate:</label>
                                <div class="controls">
                                    <input type="number" style=" width:280px" name="Slab1Rate" value="@Model.Slab1Rate" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Slab2:</label>
                                <div class="controls">
                                    <input type="text" style=" width:280px" name="Slab2" value="@Model.Slab2" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Slab2 Rate:</label>
                                <div class="controls">
                                    <input type="number" style=" width:280px" name="Slab2Rate" value="@Model.Slab2Rate" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Slab3:</label>
                                <div class="controls">
                                    <input type="text" style=" width:280px" name="Slab3" value="@Model.Slab3" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Slab3 Rate:</label>
                                <div class="controls">
                                    <input type="number" style=" width:280px" name="Slab3Rate" value="@Model.Slab3Rate" required>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Slab4:</label>
                                <div class="controls">
                                    <input type="text" style=" width:280px" name="Slab4" value="@Model.Slab4" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Slab4 Rate:</label>
                                <div class="controls">
                                    <input type="number" style=" width:280px" name="Slab4Rate" value="@Model.Slab4Rate" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Slab5:</label>
                                <div class="controls">
                                    <input type="text" style=" width:280px" name="Slab5" value="@Model.Slab5" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Slab5 Rate:</label>
                                <div class="controls">
                                    <input type="number" style=" width:280px" name="Slab5Rate" value="@Model.Slab5Rate" required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Other Amount:</label>
                                <div class="controls">
                                    <input type="number" style=" width:280px" name="OtherAmount" value="@Model.OtherAmount" required>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">Update Taxation Detail</button>

                            </div>
                        </fieldset>
                    </form>
                </div>
            </div><!--/span-->
        </div><!--/row-->
