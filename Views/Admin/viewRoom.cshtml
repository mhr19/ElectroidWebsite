        <script src="~/Scripts/js4/jquery-1.9.1.min.js"></script>
        <script src="~/Scripts/js4/jquery-migrate-1.0.0.min.js"></script>

        <script src="~/Scripts/js4/jquery-ui-1.10.0.custom.min.js"></script>

